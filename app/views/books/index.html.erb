<body>
<h1>Book</h1>
    <table>
    	<thead>

    		<tr>
    		<th>Title</th>
    		<th>Body</th>
    		<th colspan="3"></th>
    	    </tr>

    	</thead>
    	<tbody>
    		<% @books.each do |book| %>
    		<tr>
    			<td><%= book.title %></td>
    			<td><%= book.body %></td>
    			<td><%= link_to 'Show', book_path(book.id) %></td>
    			<td><%= link_to'Edit', edit_book_path(book.id) %></td>
    			<td><%= link_to 'Destroy', book_path(book.id) ,method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
    		<% end %>

        </tbody>

    </table>

<h2>New book</h2>
<!-- バリデーション -->

   <% if @toukou.errors.any? %>
  　<div id="error_explanation" class="alert alert-danger">
    <ul>
      <% @toukou.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  　</div>
　　<% end %>
<!-- 投稿フォーム -->
   <%= form_for @toukou do |f| %>

   <h4><%= f.label :title %></h4>
   <h4><%= f.text_field :title %></h4>
   <h4><%= f.label :body %></h4>
   <h4><%= f.text_area :body %></h4>

   <%= f.submit 'Create Book' %>

   <% end %>

</body>
